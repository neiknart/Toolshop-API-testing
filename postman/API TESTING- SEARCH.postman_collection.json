	"item": [
		{
			"name": "search",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse nội dung JSON từ response\r",
							"const jsonData = pm.response.json();\r",
							"const testName = pm.iterationData.get(\"testName\");\r",
							"\r",
							"// Test 1: Kiểm tra Status Code\r",
							"pm.test(`[${testName}] - Status code is 200`, () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Test 2: Bắt buộc phải có kết quả trả về\r",
							"pm.test(`[${testName}] - Search must return results`, () => {\r",
							"    pm.expect(jsonData.data).to.be.an('array').and.to.not.be.empty;\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{authToken}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/products/search?q={{searchKeyword}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"products",
						"search"
					],
					"query": [
						{
							"key": "q",
							"value": "{{searchKeyword}}"
						}
					]
				}
			},
			"response": []
		}
	]
