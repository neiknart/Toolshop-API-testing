	},
	"item": [
		{
			"name": "login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Lấy các giá trị mong đợi từ file CSV\r",
							"const expectedStatus = parseInt(pm.iterationData.get(\"expectedStatus\"));\r",
							"const expectedToHaveToken = pm.iterationData.get(\"expectedToHaveToken\") === \"true\";\r",
							"const testName = pm.iterationData.get(\"testName\");\r",
							"\r",
							"// Test mã trạng thái\r",
							"pm.test(`${testName} - Status code is ${expectedStatus}`, () => {\r",
							"    pm.response.to.have.status(expectedStatus);\r",
							"});\r",
							"\r",
							"// Chỉ xử lý token nếu request thành công\r",
							"if (pm.response.code === 200) {\r",
							"    const responseData = pm.response.json();\r",
							"    const token = responseData.access_token;\r",
							"\r",
							"    if (expectedToHaveToken) {\r",
							"        pm.test(\"Response should contain an access token\", () => {\r",
							"            pm.expect(token).to.be.a('string').and.not.empty;\r",
							"        });\r",
							"        // Lưu token vào biến collection\r",
							"        pm.collectionVariables.set(\"authToken\", token);\r",
							"    }\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\": \"{{email}}\",\r\n    \"password\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/users/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"login"
					]
				}
			},
			"response": []
		}
	]
}